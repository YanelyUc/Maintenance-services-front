<h1>Detail car <%= @car['plate_number'] %></h1>

<ul class="collection">
    <li class="collection-item">
      <div style="display: flex; align-items: center;">
        <span style="font-weight: bold; font-size: 25px;", class="title">Id:</span>
        <p style = "font-size: 25px; margin-left: 15px;"> <%= @car['id']%> </p>
      </div>
    </li>
    <li class="collection-item">
      <div style="display: flex; align-items: center;">
        <span style="font-weight: bold; font-size: 25px;", class="title">Plate_number:</span>
        <p style = "font-size: 25px; margin-left: 15px;"> <%= @car['plate_number']%> </p>
      </div>
    </li>
    <li class="collection-item">
      <div style="display: flex; align-items: center;">
        <span style="font-weight: bold; font-size: 25px;", class="title">Model:</span>
        <p style = "font-size: 25px; margin-left: 15px;"> <%= @car['model']%> </p>
      </div>
    </li>
    <li class="collection-item">
      <div style="display: flex; align-items: center;">
        <span style="font-weight: bold; font-size: 25px;", class="title">Year:</span>
        <p style = "font-size: 25px; margin-left: 15px;"> <%= @car['year']%> </p>
      </div>
    </li>
    <li class="collection-item">
      <div style="display: flex; align-items: center;">
        <span style="font-weight: bold; font-size: 25px;", class="title">Is active:</span>
        <p style = "font-size: 25px; margin-left: 15px;"> <%= @car['active']%> </p>
      </div>
    </li>
  </ul>

<h2> Maintenance Services </h2>

<table style="width:50%">
  <tr>
    <th style="text-align: left;">id</th>
    <th style="text-align: left;">description</th>
    <th style="text-align: left;">status</th>
    <th style="text-align: left;">date</th>
    <th style="text-align: center;">active</th>
  </tr>
  <% @car['maintenance_services'].each do |service| %>
    <tr>
      <td><%= service['id'] %></td>
      <td><%= service['description'] %></td>
      <td><%= service['status'] %></td>
      <td><%= service['date'] %></td>
      <td><%= service['active'] %></td>
    </tr>
  <% end %> 
</table> 

